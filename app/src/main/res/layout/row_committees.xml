<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    card_view:cardElevation="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_margin="1dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/llimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center|center_vertical"
                android:src="@drawable/forward"
                android:id="@+id/imgDownload"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>


        <LinearLayout
        android:padding="8dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/llimg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

      <in.explicate.fcm.util.CustomTextView
                android:id="@+id/tvName"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/subject"
                android:text="Federal Committee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        <in.explicate.fcm.util.CustomTextView
                android:id="@+id/tvDsc"
                android:text="Rules and regulations"
                android:textColor="@color/gray"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <in.explicate.fcm.util.CustomTextView
            android:id="@+id/tvEmail"
            android:text="EMAIL : test@example.com"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



    </RelativeLayout>



</android.support.v7.widget.CardView>



